{
	"name": "gitlookup",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"start": "node dist/index.js",
		"build": "tsc && npm run copyallfiles",
		"dev": "concurrently \"npm:dev:build\" \"npm:dev:start\" \"npm:copyfiles\"",
		"dev:build": "tsc --watch --preserveWatchOutput",
		"dev:start": "tsc && nodemon -e html,css,js,json --ignore src/ dist/index.js",
		"copyfiles": "nodemon -e html,css --ignore dist/ --exec \"copyfiles ./public/**/* dist & copyfiles -u 1 ./src/**/*.html dist\"",
		"copyallfiles": "copyfiles ./public/**/* dist & copyfiles -u 1 ./src/**/*.html dist",
		"test": "jest"
	},
	"devDependencies": {
		"@babel/core": "^7.8.4",
		"@babel/preset-env": "^7.8.4",
		"@babel/preset-typescript": "^7.8.3",
		"@hapi/inert": "^6.0.1",
		"@hapi/vision": "^6.0.0",
		"@types/hapi__hapi": "^19.0.2",
		"@types/hapi__inert": "^5.2.0",
		"@types/hapi__joi": "^16.0.11",
		"@types/hapi__vision": "^5.5.1",
		"@types/jest": "^25.1.3",
		"@types/node": "^13.7.4",
		"@typescript-eslint/eslint-plugin": "^2.20.0",
		"@typescript-eslint/parser": "^2.20.0",
		"babel-jest": "^25.1.0",
		"concurrently": "^5.1.0",
		"copyfiles": "^2.2.0",
		"eslint": "^6.8.0",
		"eslint-plugin-security": "^1.4.0",
		"hapi-swagger": "^12.1.0",
		"jest": "^25.1.0",
		"nodemon": "^2.0.2",
		"prettier": "^1.19.1",
		"rimraf": "^3.0.2",
		"typescript": "^3.8.2"
	},
	"dependencies": {
		"@hapi/boom": "^9.0.0",
		"@hapi/hapi": "^19.1.1",
		"@hapi/joi": "^17.1.0",
		"axios": "^0.19.2",
		"handlebars": "^4.7.3"
	},
	"jest": {
		"clearMocks": true,
		"coverageDirectory": "coverage",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"\\\\node_modules\\\\",
			"\\\\dist\\\\"
		]
	}
}